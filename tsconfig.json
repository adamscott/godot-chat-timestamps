{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "alwaysStrict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "lib": ["ES2022", "DOM"],
        "module": "ES2022",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2022"
    },
    "include": ["src/**/*.ts", "src/**/*.mts"]
}
